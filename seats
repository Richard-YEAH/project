<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>座位查找程序</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        input, button { padding: 10px; margin: 5px; }
        #result { margin-top: 20px; font-size: 18px; color: green; }
    </style>
</head>
<body>
    <h1>座位查找程序</h1>
    <label for="nameInput">输入名字：</label>
    <input type="text" id="nameInput" placeholder="请输入名字">
    <button onclick="findSeat()">查找座位</button>
    <div id="result"></div>

    <script>
        // 示例座位表数据
        const seatTable = [
            { name: "杨光", seat: "5-3-1" },
            { name: "李四", seat: "B2" },
            { name: "王五", seat: "C3" },
            { name: "赵六", seat: "D4" }
        ];

        function findSeat() {
            const nameInput = document.getElementById("nameInput").value.trim();
            const resultDiv = document.getElementById("result");

            // 查找名字对应的座位
            const record = seatTable.find(record => record.name === nameInput);

            if (record) {
                resultDiv.innerText = `姓名：${record.name}, 座位：${record.seat}`;
            } else {
                resultDiv.innerText = "未找到该姓名的座位信息。";
                resultDiv.style.color = "red";
            }
        }
    </script>
</body>
</html>

